<%- include('partials/header') %>

<div class="container py-8">
  <div class="max-w-7xl mx-auto">
    <!-- Welcome Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
        Welcome to XLPanel
      </h1>
      <p class="text-xl text-secondary">Manage your game servers with ease</p>
      <div class="flex justify-center items-center mt-4">
        <div class="flex items-center bg-card-bg rounded-full px-6 py-3">
          <i class="fas fa-coins text-warning text-2xl mr-3"></i>
          <span class="text-2xl font-bold"><%= coins %> coins</span>
          <span class="text-sm text-secondary ml-2">â€¢ <%= user %></span>
        </div>
      </div>
    </div>

    <!-- Resource Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <!-- CPU Usage -->
      <div class="card hover:shadow-lg transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-blue-500 bg-opacity-20 rounded-lg">
            <i class="fas fa-microchip text-2xl text-blue-400"></i>
          </div>
          <div class="text-right">
            <p class="text-sm text-secondary">CPU Usage</p>
            <p class="text-2xl font-bold"><%= Math.round((mockData.cpu.used / mockData.cpu.total) * 100) %>%</p>
          </div>
        </div>
        <div class="mb-2">
          <div class="flex justify-between text-sm">
            <span><%= mockData.cpu.used %>% of <%= mockData.cpu.total %>% used</span>
          </div>
          <div class="progress mt-2">
            <div class="progress-bar bg-blue-500" style="width: <%= (mockData.cpu.used / mockData.cpu.total) * 100 %>%"></div>
          </div>
        </div>
      </div>

      <!-- Memory Usage -->
      <div class="card hover:shadow-lg transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-green-500 bg-opacity-20 rounded-lg">
            <i class="fas fa-memory text-2xl text-green-400"></i>
          </div>
          <div class="text-right">
            <p class="text-sm text-secondary">Memory</p>
            <p class="text-2xl font-bold"><%= mockData.memory.used %>MB</p>
          </div>
        </div>
        <div class="mb-2">
          <div class="flex justify-between text-sm">
            <span><%= mockData.memory.used %>MB of <%= mockData.memory.total %>MB used</span>
          </div>
          <div class="progress mt-2">
            <div class="progress-bar bg-green-500" style="width: <%= (mockData.memory.used / mockData.memory.total) * 100 %>%"></div>
          </div>
        </div>
      </div>

      <!-- Storage Usage -->
      <div class="card hover:shadow-lg transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-purple-500 bg-opacity-20 rounded-lg">
            <i class="fas fa-hdd text-2xl text-purple-400"></i>
          </div>
          <div class="text-right">
            <p class="text-sm text-secondary">Storage</p>
            <p class="text-2xl font-bold"><%= mockData.disk.used %>MB</p>
          </div>
        </div>
        <div class="mb-2">
          <div class="flex justify-between text-sm">
            <span><%= mockData.disk.used %>MB of <%= mockData.disk.total %>MB used</span>
          </div>
          <div class="progress mt-2">
            <div class="progress-bar bg-purple-500" style="width: <%= (mockData.disk.used / mockData.disk.total) * 100 %>%"></div>
          </div>
        </div>
      </div>

      <!-- Server Slots -->
      <div class="card hover:shadow-lg transition-shadow duration-300">
        <div class="flex items-center justify-between mb-4">
          <div class="p-3 bg-red-500 bg-opacity-20 rounded-lg">
            <i class="fas fa-server text-2xl text-red-400"></i>
          </div>
          <div class="text-right">
            <p class="text-sm text-secondary">Server Slots</p>
            <p class="text-2xl font-bold"><%= mockData.servers.used %></p>
          </div>
        </div>
        <div class="mb-2">
          <div class="flex justify-between text-sm">
            <span><%= mockData.servers.used %> of <%= mockData.servers.total %> slots used</span>
          </div>
          <div class="progress mt-2">
            <div class="progress-bar bg-red-500" style="width: <%= (mockData.servers.used / mockData.servers.total) * 100 %>%"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <!-- My Servers -->
      <div class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
        <div class="text-center">
          <div class="p-4 bg-primary bg-opacity-20 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-server text-3xl text-primary"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">My Servers</h3>
          <p class="text-secondary mb-4">Manage your game servers</p>
          <a href="/servers" class="btn btn-primary w-full">
            <i class="fas fa-arrow-right mr-2"></i>
            View Servers
          </a>
        </div>
      </div>

      <!-- Store -->
      <div class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
        <div class="text-center">
          <div class="p-4 bg-success bg-opacity-20 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-shopping-cart text-3xl text-success"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Store</h3>
          <p class="text-secondary mb-4">Purchase resources</p>
          <a href="/store" class="btn btn-success w-full">
            <i class="fas fa-arrow-right mr-2"></i>
            Browse Store
          </a>
        </div>
      </div>

      <!-- Account -->
      <div class="card hover:shadow-lg transition-all duration-300 hover:scale-105">
        <div class="text-center">
          <div class="p-4 bg-warning bg-opacity-20 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-user text-3xl text-warning"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Account</h3>
          <p class="text-secondary mb-4">Manage your profile</p>
          <a href="/account" class="btn btn-warning w-full">
            <i class="fas fa-arrow-right mr-2"></i>
            View Profile
          </a>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="card">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold">Recent Activity</h2>
        <i class="fas fa-history text-secondary"></i>
      </div>
      
      <div class="space-y-4">
        <!-- Activity Item -->
        <div class="flex items-center p-4 bg-card-bg rounded-lg">
          <div class="p-2 bg-success bg-opacity-20 rounded-lg mr-4">
            <i class="fas fa-server text-success"></i>
          </div>
          <div class="flex-1">
            <h4 class="font-semibold">Server created successfully</h4>
            <p class="text-sm text-secondary">2 minutes ago</p>
          </div>
        </div>

        <!-- Activity Item -->
        <div class="flex items-center p-4 bg-card-bg rounded-lg">
          <div class="p-2 bg-warning bg-opacity-20 rounded-lg mr-4">
            <i class="fas fa-coins text-warning"></i>
          </div>
          <div class="flex-1">
            <h4 class="font-semibold">Purchased 100 coins</h4>
            <p class="text-sm text-secondary">1 hour ago</p>
          </div>
        </div>

        <!-- Activity Item -->
        <div class="flex items-center p-4 bg-card-bg rounded-lg">
          <div class="p-2 bg-primary bg-opacity-20 rounded-lg mr-4">
            <i class="fas fa-memory text-primary"></i>
          </div>
          <div class="flex-1">
            <h4 class="font-semibold">RAM upgraded to 2GB</h4>
            <p class="text-sm text-secondary">3 hours ago</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-12 text-secondary">
      <p>&copy; 2025 XLPanel. All rights reserved.</p>
      <p class="mt-2">Logged in as <span class="font-semibold"><%= user %></span></p>
    </div>
  </div>
</div>

