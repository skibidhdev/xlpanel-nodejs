<%- include('partials/header') %>

<div class="container py-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Resource Store</h1>
      <p class="text-secondary">Purchase additional resources for your servers</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% storeItems.forEach(item => { %>
        <div class="card">
          <div class="text-center mb-6">
            <i class="<%= item.icon %> text-4xl text-primary mb-4"></i>
            <h3 class="text-xl font-semibold mb-2"><%= item.name %></h3>
            <p class="text-secondary"><%= item.description %></p>
          </div>

          <div class="text-center mb-6">
            <div class="text-3xl font-bold text-primary mb-2">
              <%= item.price %> <i class="fas fa-coins text-warning"></i>
            </div>
            <p class="text-sm text-secondary">Current: <%= item.current %><%= item.unit %></p>
          </div>

          <form action="/store/purchase" method="POST" class="text-center">
            <input type="hidden" name="item" value="<%= item.id %>">
            <div class="mb-4">
              <label class="block text-sm font-medium mb-2">Quantity</label>
              <input 
                type="number" 
                name="quantity" 
                value="1" 
                min="1" 
                max="10"
                class="input w-24 text-center mx-auto"
              >
            </div>
            <button type="submit" class="btn btn-primary w-full">
              <i class="fas fa-shopping-cart mr-2"></i>
              Purchase
            </button>
          </form>
        </div>
      <% }); %>
    </div>

    <% if (error) { %>
      <div class="mt-8 p-4 bg-error bg-opacity-20 text-error rounded-lg">
        <p class="text-center"><%= error %></p>
      </div>
    <% } %>

    <% if (success) { %>
      <div class="mt-8 p-4 bg-success bg-opacity-20 text-success rounded-lg">
        <p class="text-center"><%= success %></p>
      </div>
    <% } %>
  </div>
</div>

